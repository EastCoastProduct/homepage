<!doctype html>
<html lang="en">
  <% include partials/head %>
  <body>
    <% include partials/header %>
    <main>
      <section>
        <div class="container">
          <header class="section--header">
            <h1 class="text-heading-one">A simple mission: We like to help</h1>
          </header>
          <div class="card">
            <p class="paragraph--major">Thereâ€™s an opportunity for a services company to be more inclusive of their clients, more customer-centric, more cognizant of how to partner with clients to create an awesome team that gets projects done fast. We are that company. We believe in going above and beyond for our clients. We use our years of experience and network to help us be the best help our clients can buy.</p>
          </div>
        </div><!-- end of .container -->
      </section>
      <section>
        <div class="container">
          <header class="section--header">
            <h1 class="text-heading-one">The dream team</h1>
          </header>
          <ul class="employee-list">
            <% collections.person.forEach(function(person){ %>
            <li class="employee card">
              <img src="../images/photos/team/<%= person.id%>.jpg" alt="Potrait of <%= person.name %>" class="employee-photo" />
              <h2 class="text-heading-two employee-name"><%= person.name %></h2>
              <h3 class="paragraph--minor employee-title"><%= person.title %></h3>
              <p class="paragraph--minor employee-bio"><%= person.bio %></p>
              <ul class="list--minor">
                <% if(person.contact.email) { %>      <li><a href="mailto:<%= person.contact.email %>@eastcoastproduct.com" target="_blank">Email</a></li><% } %>
                <% if(person.contact.tel) { %>        <li><a href="tel:<%= person.contact.tel %>">Call</a></li><% } %>
                <% if(person.contact.facebook) { %>   <li><a href="<%= person.contact.facebook %>" target="_blank">Facebook</a></li><% } %>
                <% if(person.contact.twitter) { %>    <li><a href="<%= person.contact.twitter %>" target="_blank">Twitter</a></li><% } %>
                <% if(person.contact.linkedin) { %>   <li><a href="<%= person.contact.linkedin %>" target="_blank">LinkedIn</a></li><% } %>
                <% if(person.contact.github) { %>     <li><a href="<%= person.contact.github %>" target="_blank">Github</a></li><% } %>
                <% if(person.contact.spotlight) { %>  <li><a href="<%= person.contact.spotlight %>" target="_blank">Spotlight</a></li><% } %>
              </ul>
            </li><!-- end of .card -->
            <% }) %>
          </ul><!-- end of .employees-list -->
        </div><!-- end of .container -->
      </section>
      <section>
        <div class="container">
          <header class="section--header">
            <h1 class="text-heading-one">Our Values</h1>
          </header>
          <div class="card">
          </div>
        </div><!-- end of .container -->
      </section>
      <section>
        <div class="container">
          <header class="section--header">
            <h1 class="text-heading-one">Our offices</h1>
          </header>
          <div class="card">
          </div>
        </div><!-- end of .container -->
      </section>
      <section>
        <div class="container">
          <header class="section--header">
            <h1 class="text-heading-one">Jobs</h1>
          </header>
          <div class="card">
          </div>
        </div><!-- end of .container -->
      </section>
      <section>
        <div class="container">
          <article>
            <h1 class="text-heading-one">Values</h1>
            <% collections.values.forEach(function(value) { %>
              <figure class="block-column-3">
              <div class="values-image-container">
                <img src="<%= value.image %>"
                  alt="picture" />
              </div>
              <figcaption>
                <h2 class="text-heading-two"><%= value.title %></h2>
                <p class="minor"><%= value.description %></p>
              </figcaption>
            </figure>
            <% }) %>
          </article>
        </div>
      </section>
    </main>
    <% include partials/footer %>
  </body>
</html>
<!doctype html>
<html lang="en">
  <% include partials/head %>
  <body class="area-work">
    <% include partials/header %>
    <main>
      <section id="projects">
        <div class="container">
          <header class="section--header">
            <h1 class="text-heading-one">Projects</h1>
          </header>
          <ul class="work-list">
            <% collections.work.forEach(function(work) { %>
            <% if(work.published == true) { %>
            <li class="work card">
              <div class="work-image-wrap">
                <img src="<%= work.pageHeadingImage %>" alt="A screenshot from the <%- work.pageHeading %> project." class="work-image" />
              </div>
              <h2 class="text-heading-two work-project-tagline"><a href="../work/<%= work.id %>"><%- work.pageHeading %></a></h2>
              <p class="paragraph--minor work-client-name"><%- work.pageDescription %></p>
            </li>
            <% } %>
            <% }) %>
        </div>
      </section>
    </main>
    <% include partials/footer %>
  </body>
</html>

<!doctype html>
<html lang="en">
  <% include partials/head %>
  <body>
    <% include partials/header %>
    <main>
      <section>
        <div class="container">
          <header class="section--header">
            <h1 class="text-heading-one">Projects</h1>
          </header>
          <ul class="work-list">
            <% collections.work.forEach(function(work) { %>
            <% if(work.id == 'sna') {} else { %>
            <li class="work card">
              <div class="work-image-wrap">
                <img src="<%= work.leadImage %>" alt="picture" class="work-image" />
              </div>
              <h2 class="text-heading-two work-project-tagline"><a href="../work/<%= work.id %>"><%- work.pageHeading %></a></h2>
              <h3 class="paragraph--minor work-client-name"><%- work.clientName %></h3>
              <p class="paragraph--minor work-description"><%= work.introduction %></p>
            </li>
            <% } %>
            <% }) %>
        </div>
      </section>
    </main>
    <% include partials/footer %>
  </body>
</html>

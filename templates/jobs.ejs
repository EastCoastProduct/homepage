<!doctype html>
<html lang="en">
  <% include partials/head %>
  <body class="area-jobs">
    <% include partials/header %>
    <main role="main" id="main">

      <!-- comment this out when we post jobs -->
      <section id="intro">
        <div class="container">
          <p class="paragraph--major">Sorry, looks like we don't have any specific positions open right now. Feel free to head on over to our <a href="/contact">contact page</a> and send us a message though. We love meeting new people!</p>
        </div><!-- end of .container -->
      </section>

      <section id="jobs">
        <div class="container">
          <div>
            <% collections.jobs.forEach(function(job) { %>
            <a href="/jobs/<%= job.id %>" class="job card targetable" id="<%= job.id %>">
              <h2 class="text-heading-two"><span class="link-surrogate"><%= job.pageHeading %></span></h2>
              <p><%- job.pageDescription %></p>
            </a>
            <% }) %>
          </div>
      </section>
    </main>
    <% include partials/footer %>
  </body>
</html>

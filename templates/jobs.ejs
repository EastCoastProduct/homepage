<!doctype html>
<html lang="en">
  <% include partials/head %>
  <body>
    <% include partials/header %>
    <main>
      <section>
        <div class="container">
          <% collections.jobs.forEach(function(job){ %>
          <% if(job.published == true) { %>
            <article class="jobs--container-info">
              <h1 class="text-heading-one"><a href="../jobs/<%= job.id %>"><%- job.pageHeading %></a></h1>
              <h3 class="text-heading-three">Location: <%- job.pageDescription %></h3>
              <a href="../jobs/<%= job.id %>" class="button button-default">
                Learn more about the <span class="hidden"> <%= job.pageHeading %></span> position
              </a>
            </article>
            <% } %>
          <% }) %>
        </div>
      </section>
    </main>
    <% include partials/footer %>
  </body>
</html>
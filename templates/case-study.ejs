<!doctype html>
<html lang="en">
  <% include partials/head %>
  <body>
    <% include partials/header %>
    <main>
      <div style="background-color: #<%= brandColor %>;">
        <img src="../<%= leadImage %>" alt="A screenshot from the  <%= clientName %> project." />
      </div>
      <section>
        <div class="container">
          <header class="section--header">
            <h1 class="text-heading-one">Project introduction</h1>
          </header>
          <div class="card">
            <p class="paragraph--major"><%- introduction %></p>
          </div>
        </div>
      </section>
      <section>
        <div class="container">
          <div class="card">
            <%- contents %>
          </div>
        </div>
      </section>
      <% if(testimonialContent) { %>
      <section>
        <div class="container">
          <div class="card">
            <p class="paragraph--major">“<%= testimonialContent %>”</p>
            <div class="case--comment-container-person">
              <p><%= testimonialPerson %><br>
              &mdash; <%= testimonialPosition %></p>
            </div>
          </div>
        </div>
      </section>
      <% } %>
      <section>
        <div class="container">
          <div class="card">
            <h2 class="text-heading-two">Want to learn more?</h2>
            <% if(pdf) { %>
            <a href="../<%= pdf %>" class="button--default" target="_blank">Download a detailed case study (PDF)</a>
            <% } %>
            <a href="<%= level %>contact" class="button--default">Get in touch</a>
          </div>
        </div>
      </section>
    </main>
    <% include partials/footer %>
  </body>
</html>

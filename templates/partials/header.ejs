<header class="header--global">
  <div class="container ">
    <a href="<%- level %>" class="main--navigation-logo">East Coast Product</a>
    <nav class="navigation navigation--global">
      <% if(titleTag == "Services") { %>
        <a href="<%- level %>services" class="link current">Services</a>
      <% } else { %>
        <a href="<%- level %>services" class="link">Services</a>
      <% } %>
      <% if(titleTag == "Work") { %>
        <a href="<%- level %>work" class="link current">Work</a>
      <% } else { %>
        <a href="<%- level %>work" class="link">Work</a>
      <% } %>
      <% if(titleTag == "About") { %>
        <a href="<%- level %>about" class="link current">About</a>
      <% } else { %>
        <a href="<%- level %>about" class="link">About</a>
      <% } %>
      <a href="<%- level %>about/#jobs" class="link">Jobs</a>
      <a href="https://blog.eastcoastproduct.com" target="_blank" class="link">Blog</a>
      <a href="<%- level %>contact" class="button--major">Hire Us</a>
    </nav>
    <div class="page-heading">
      <% if(layout == "home.ejs") { %>
        <h1 class="page-heading--solo-paragraph"><%- pageHeading %></h1>
        <div class="header--image">
          <img src="<%- pageHeadingImage %>" alt="<%- pageHeadingImageAlt %>"/>
        </div>
      <% } else { %>
        <h1 class="page-heading--title"><%- pageHeading %></h1>
        <% if(pageDescription) { %>
          <p class="page-heading--subtitle"><%- pageDescription %></p>
        <% } %>
        <% if(pageHeadingImage) { %>
          <div class="header--image">
            <img src="<%- level %>/<%- pageHeadingImage %>" alt="<%- pageHeadingImageAlt %>"/>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
</header>

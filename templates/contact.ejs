<!doctype html>
<html lang="en">
  <% include partials/head %>
  <body>
    <% include partials/header %>
    <section class="contact--main-title">
      <div class="container">
        <h1 class="text-heading-one">I have a question</h1>
        <p class="major">Email: <a class="email" onclick="location.href='mailto:' + 'hello' + '@' + 'eastcoastproduct.com';">
          hello@<span class="hidden">null</span>eastcoastproduct.com
        </a></p>
        <p class="major">Call: <a href="tel:+18667777459"> (866) 777-7459</a></p>
      </div>
    </section>

    <section class="contact--form yellow-tint-background angle-edge top-right bottom-right">
      <div class="container">
        <h1 class="text-heading-one">I'd like to talk about a project</h1>
        <!--[if lte IE 8]>
        <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2-legacy.js"></script>
        <![endif]-->
        <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2.js"></script>
        <script>
          hbspt.forms.create({
            css: '',
            portalId: '502785',
            formId: 'f3356206-08e0-4e99-b0b3-2f24f7e319d3'
          });
        </script>
      </div>
    </section>
    <section id="experts">
      <div class="container contact--professionals">
        <h1 class="text-heading-one">I'd like to speak with an expert</h1>
        <p>Wanna take things slow? We’re happy to have a quick chat and offer expert advice if that’s more your speed.</p>
        <ul class="employees-list">
          <% collections.person.forEach(function(person){ %>
          <% if(person.numberId == 1 || person.numberId == 2 || person.numberId == 3) { %>
            <li class="employee">
            <div class="employee-vitals">
              <img src="../images/photos/team/<%= person.id%>.jpg" alt="Potrait of <%= person.name %>" class="employee-photo" />
              <h2 class="text-heading-three"><%= person.name %></h2>
              <p class="major"><%= person.title %></p>
            </div>
            <div class="employee-about">
              <p><strong><%= person.name.split(" ")[0] %> is an expert in:</strong> <br><%= person.areas %>.</p>
              <ul class="employee-contact">
                <% if(person.contact.email) { %>
                <li><span class="icon icon--monitor-black"></span><a class="email" onclick="location.href='mailto:<%= person.contact.email %>' + '@' + 'eastcoastproduct.com';" target="_blank">Email</a><noscript>This email is scripted to prevent spam. Please enable JavaScript to be able to send an email.</noscript></li>
                <% } %>
                <% if(person.contact.tel) { %>
                <li><span class="icon icon--phone-black"></span><a href="tel:<%= person.contact.tel %>">Call</a></li>
                <% } %>
                <% if(person.contact.facebook) { %>
                <li><span class="icon icon--facebook-black"></span><a href="<%= person.contact.facebook %>" target="_blank">Facebook</a></li>
                <% } %>
                <% if(person.contact.twitter) { %>
                <li><span class="icon icon--twitter-black"></span><a href="<%= person.contact.twitter %>" target="_blank">Twitter</a></li>
                <% } %>
                <% if(person.contact.linkedin) { %>
                <li><span class="icon icon--linkedin-black"></span><a href="<%= person.contact.linkedin %>" target="_blank">LinkedIn</a></li>
                <% } %>
                <% if(person.contact.github) { %>
                <li><span class="icon icon--github-black"></span><a href="<%= person.contact.github %>" target="_blank">Github</a></li>
                <% } %>
              </ul>
            </div>
          </li>
          <% } %>
          <% }) %>
        </ul>
     </div>
    </section>
    <% include partials/footer %>
  </body>
</html>
